{
  "name": "explorify",
  "version": "0.1.0",
  "homepage": "https://data-explorify.herokuapp.com/",
  "private": true,
  "proxy": "http://localhost:3001",
  "scripts": {
    "start": "concurrently \"react-scripts-ts start\" \"tsc -w -p server\"  \"nodemon dist/index.js\"",
    "server": "node dist/index.js",
    "heroku-postbuild": "yarn build",
    "build": "concurrently \"yarn build:client\" \"yarn build:server\"",
    "build:client": "react-scripts-ts build",
    "build:server": "tsc -p server",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject",
    "lint": "eslint '**/*' --ext .js --ext .ts --ext .tsx --max-warnings 0 --format codeframe",
    "lint:stats": "yarn lint --format node_modules/eslint-stats/byError.js",
    "predeploy": "npm run build",
    "pretty": "prettier --write '**/*'",
    "deploy": "gh-pages -d build"
  },
  "dependencies": {
    "@shopify/polaris": "^3.2.1",
    "any-db": "^2.2.1",
    "any-db-mssql": "^0.1.0",
    "any-db-mysql": "^2.1.2",
    "any-db-postgres": "^2.1.5",
    "any-db-sqlite3": "^2.1.4",
    "classnames": "^2.2.6",
    "datavoyager": "^2.0.0-alpha.24",
    "express": "^4.16.4",
    "graphql": "^14.0.2",
    "graphql-lodash": "^1.3.3",
    "graphql-request": "^1.8.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "recompose": "^0.30.0"
  },
  "devDependencies": {
    "@types/any-db": "^2.1.30",
    "@types/classnames": "^2.2.6",
    "@types/express": "^4.16.0",
    "@types/graphql": "^14.0.3",
    "@types/jest": "^23.3.10",
    "@types/node": "^10.12.12",
    "@types/react": "^16.7.13",
    "@types/react-dom": "^16.0.11",
    "@types/recompose": "^0.30.0",
    "concurrently": "^4.1.0",
    "eslint": "^5.12.1",
    "eslint-plugin-shopify": "^26.1.2",
    "eslint-stats": "^1.0.1",
    "gh-pages": "^2.0.1",
    "husky": "^1.3.1",
    "node-sass": "^4.10.0",
    "nodemon": "^1.18.7",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.10.0",
    "react-scripts-ts": "3.1.0",
    "typescript": "^3.2.1"
  },
  "eslintConfig": {
    "extends": [
      "plugin:shopify/react",
      "plugin:shopify/typescript",
      "plugin:shopify/prettier"
    ],
    "settings": {
      "react": {
        "version": "16.7"
      }
    },
    "rules": {
      "import/named": "off",
      "import/no-anonymous-default-export": "off",
      "import/no-named-as-default": "off",
      "lines-around-comment": "off",
      "no-empty-pattern": "off",
      "promise/catch-or-return": "off"
    },
    "overrides": []
  },
  "eslintIgnore": [
    "*.css",
    "*.html",
    "*.ico",
    "*.json",
    "*.lock",
    "*.log",
    "*.md",
    "Procfile",
    "/build",
    "/dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "#pretty-quick --staged"
    }
  }
}
